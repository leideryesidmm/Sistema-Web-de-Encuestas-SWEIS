	<div  id="banner" class="container-fluid">
		<div class="row">
			<div class="col-md-7 text-white text-center">
				<a href="https://ingsistemas.cloud.ufps.edu.co/"><img src="../../images/logo.png" class="d-block" alt='...' height="130px" width="130px"></div></a>
				<div id="fuente" class="col-md-5 mt-4 text-white text-center"><br>	
					<a href="/poblacion"><button type="button" onclick ="" class="btn text-white" style="font-family:Impact; font-size: 20px;">Poblaciones</button></a>			
					<a href="/inicio"><button type="button" onclick ="" class="btn text-white" style="font-family:Impact; font-size: 20px;">Catálogo de Encuestas</button></a>
						  <a href="#"><button type="button" class="btn text-white" style="font-family: Impact; font-size: 20px;">Mi cuenta</button></a>
					<a href="micuenta.html"><img src="../images/micuenta.png" class="align-right" alt='...' height="30px" width="30px"></a>
				</div>				
		</div>
	</div><br>


<div  class="container-fluid">
	<h1 style="color: #e20319; text-align: center;">Administrar poblaciones</h1><br>

</div>
<div>
	<div class="row ml-5 mr-5" style="text-align:center;">

		<%for(let i=0;i<poblaciones.length;++i){%>
		<div class="card" style="width: 31%; text-align:center; margin-left: 25px;">
		  <div class="card-body">
		    <h5 class="card-title" name="nombre">Población <%=poblaciones[i].nombre%></h5>
		    <a href="#encuestados<%= i %> " data-toggle="modal"><button style="background-color:lightgray;" type="submit" class="btn text-black">Ver</button></a>
		    <%var correos="'"%>
			<%for(let o=0;o<encuestados.length;++o){%>
				<% if(encuestados[o].poblacion==poblaciones[i].id_poblacion) { console.log(correos)%>
				<%correos+=""+encuestados[o].correo_electronico+","%>
				<%}%>
			<%}correos+="'"%>
			<% var nombre="'"+poblaciones[i].nombre+"'" %>  
			<button onclick="editarpoblacion(<%=correos%>,<%=nombre%>,<%=poblaciones[i].id_poblacion%>)" style="background-color:#e20319" type="submit" class="btn text-white">Editar</button>
		  </div>
		</div><%}%>


	</div>
</div>
<br><br>
<div id="añadiryeditar"></div>


<div class="container">
	<div class="row">
	  <div class="col-md-11 text-right"  >
			  <a class="btn-flotante"  ><button onclick="añadirpoblacion()" id="redondo" style="background-color:#e20319" class="btn text-white"><h3>+</h3></button></a>
			</div>
	  </div>
  </div>


<br>

<br>



<%for(let i=0;i<poblaciones.length;++i){%>
	<div class="modal fade" id="encuestados<%=i%>" style="top:180px">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="model-header">
					<button tyle="button" class="close" data-dismiss="modal" aria-hidden="true" style="margin-left: 10px">&times;</button>
					<br><h3 class="modal-title" style="text-align: center">Encuestados de <%=poblaciones[i].nombre%></h3>
				</div>
				<div class="modal-body" >
					<ul>
						<%for(let o=0;o<encuestados.length;++o){%>
							<% if(encuestados[o].poblacion==poblaciones[i].id_poblacion) {%> 
								<li><%=encuestados[o].correo_electronico%></li>
							<%}%>
						<% } %> 
					</ul>
				</div>
			</div>
		</div>
	</div>
	<%}%>





<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

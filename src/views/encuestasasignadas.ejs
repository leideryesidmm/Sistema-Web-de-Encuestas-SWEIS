	<link rel="stylesheet" type="text/css" href="../css/bootstrap.min.css"/>
	<link rel="stylesheet" type="text/css" href="../css/inicio.css"/>
	
</head>
<body style='background-image: url("../images/fondo3.jpg");background-repeat: repeat-x;background-repeat: repeat-y;
background-size: 100%;'>
	<script rel="stylesheet" type="text/javascript" src=""></script>


	
<div  id="banner" class="container-fluid">
	<div class="row ml-5">
		<div class="col-md-8 mt-1 text-white text-center">
			<a href="https://ingsistemas.cloud.ufps.edu.co/"><img src="../images/logo.png" class="d-block" alt='...' height="70px" width="70px"></a>
		</div>
		<div id="fuente" style="display: flex; align-items: center;" class="col-md-4 mt-2 text-white text-right">
				<a href="/sesionen2"><button type="button" onclick ="" class="btn text-white" style="font-family:Gill Sans; font-size: 20px;">Encuestas</button></a>
				<a href="#">
					<button type="button" class="btn text-white" style="font-family: Gill Sans; font-size: 20px;"><%= correo.split('@')[0] %></button>
					
				</a>
						
		</div>	
				
	</div>
</div><br>


<div style="font-size: 40px">
	<% if(encuestas.length==0){ %>
		<br><br>
		<div style="border: 1px solid #b81919;" align="center"><H1>No tiene encuestas Pendientes</H1></Div> 
			<% } else{%> 
	<h2 align="center">Encuestas Asignadas</h2> 
	<% } %> 
</div>
<div class="mt-5">
	<%for(let i=0; i<encuestas.length;i++){%>
		<div id="contenido">
			<div class="row" style="display: flex; align-items: center;"> 
				<div class="col-md-5">
					<label style=" font-family: Times-New-Roman;font-size: 22px; margin-left: 80px;"><b>Encuesta <%= encuestas[i].nombre%></b></label>
				</div>
				<div class="col-md-5">
					<label style=" font-family: Times-New-Roman;font-size: 18px; margin-left: 80px;"><b>Feche de Inicio:</b> <%= encuestas[i].fecha_publicacion.toLocaleString().split(",")[0].split(" ")[0]%></label>
					<label style=" font-family: Times-New-Roman;font-size: 18px; margin-left: 80px;"><b>Feche de Cierre:</b> <%= encuestas[i].fecha_cierre.toLocaleString().split(",")[0].split(" ")[0]%></label>
				</div>
				<div class="col-md-2">
					<button id="" style="background-color:#e20319" class="btn text-white"><a style="color:#ffffff" href="/encuestas/llenar/<%=encuestas[i].id_encuesta%>">Responder</a></button>
				</div>
			</div>
		</div><br><br>
		<% } %> </div><br><br>





<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
